{% extends 'ApdcApdcBundle::base.html.twig' %}

{% use 'ApdcApdcBundle::menu/default.html.twig' %}

{% block body %}

<div class="container">
	<div class="row">
		{% if refund_full > 0 %}
		<div class="col-sm-2">
			<a href="{{ path('refundFinal', {id:id}) }}" class="btn btn-default"><< Retour </a>
		</div>
		<div class="progress col-sm-8">
			<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
				<span>Cloture</span>
			</div>
		</div>
		{% else %}
		<div class="col-sm-2">
			<a href="{{ path('refundDigest', {id:id}) }}" class="btn btn-default"><< Retour </a>
		</div>
		<div class="progress col-sm-8">
			{% if refund_full > 0 %}
				<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;" {{ show_close == 2 ? "disabled" : "" }} >
					<span>Cloture</span>
				</div>
			{% endif %}
		</div>
		{% endif %}
		<div class="col-sm-2">
			<a href="{{ path('refundIndex') }}" class="btn btn-default right">Index</a>
		</div>
	</div>

	<div class="row">
		<div class="row">
			<div class="col-md-11"><h1>#{{id}}<small> Cloturer la commande</small></h1></div>
			<div class="col-md-1">{% include 'ApdcApdcBundle::tool/mistral_delivery.html.twig' %}</div>
		</div>
	</div>

	{% for form in forms %}
		{{ form_start(form) }}
		{{ form_widget(form) }}
			<div class="row">
				<div class="btn-group" role="group" aria-label="...">
					{% if show_close %}
						<input type="submit" name="close" value='ClÃ´turer' class="btn btn-success btn-lg right"/>
					{% endif %}
				</div>
			</div>
		{{ form_end(form) }}
	{% endfor %}
	
	<hr/>
	
	<h3>Recap des statuts de la commande</h3>

	<table class="table table-striped">
		<tr>
			<th>Le</th>
			<th>Statut</th>
			<th>Commentaire</th>
		</tr>

		{% for order in order_history %}
			<tr>	
				<td>{{ order.data.created_at|date_modify("+2 hours")|date('d/m/Y H:i:s') }}</td>
				<td>{{ order.data.status }}</td>
				<td>{{ order.data.comment|raw }}</td>
			</tr>
		{% endfor %}
	</table>
	
</div>
{% include 'ApdcApdcBundle::menu/footer.html.twig' %}
{% endblock %}
