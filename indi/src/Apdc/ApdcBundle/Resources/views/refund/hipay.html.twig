				<div class="row">
					<div class="col-md-11">
						<h1>#{{ id ~ " / " ~ customer_name }}<small> Rembourser via HiPay</small></h1>
					</div>
					<div class="col-md-1">{% include 'ApdcApdcBundle::tool/mistral_delivery.html.twig' %}</div>
				</div>
			</div>

			<div><h4>Montant à rembourser : {{ refund_diff ~ " € " }}</h4></div>
			<a href="http://www.hipaywallet.com" target="_blank">
				<input type="button" class="btn btn-success" value="Plateforme Hipay"/>
			</a>
		</div>
	</div>
</div>
