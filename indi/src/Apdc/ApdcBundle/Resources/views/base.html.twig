<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		{% block metatags %}{% endblock %}
		<title>
			{% block title %}
				Au Pas De Courses - Indi
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ path ('root') }}css/bootstrap.min.css" type="text/css" />
			<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css" />
			<link rel="stylesheet" href="{{ path ('root') }}css/style.css" />
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
		{% endblock %}
		{% block css_payout %}{% endblock %}
		{% block css_billing %}{% endblock %}
		{% block css_statCustomer %}{% endblock %}
		{% block css_loyaltyCustomer %}{% endblock %}
		{% block css_statVoucher %}{% endblock %}
		<!-- {% block css_noteOrder %}{% endblock %} -->
		{% block css_mapCustomers %}{% endblock %}
		{% block css_mapShops %}{% endblock %}
		{% block css_marginMerchant %}{% endblock %}
		{% block css_refund_postclosure %}{% endblock %}
		{% block css_accounting_customers %}{% endblock %}
		{% block css_bill_comments %}{% endblock %}
		{% block css_product_evolution %}{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	</head>
	<body>
		{% block menu %}
		{% endblock %}
		{% for message in app.session.flashbag.get('success') %}
			<div class="alert alert-success" role="alert">{{message}}</div>
		{% endfor %}
		{% for message in app.session.flashbag.get('error') %}
			<div class="alert alert-danger" role="alert">{{message}}</div>
		{% endfor %}
		{% for message in app.session.flashbag.get('warning') %}
			<div class="alert alert-warning" role="alert">{{message}}</div>
		{% endfor %}
		{% for message in app.session.flashbag.get('info') %}
			<div class="alert alert-info" role="alert">{{message}}</div>
		{% endfor %}
		{% block body %}
		{% endblock %}
		{% block javascript_base %}
			<script type="text/javascript" src="{{ path('root') }}js/jquery-3.1.1.min.js"></script>
			<script type="text/javascript" src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
			<script type="text/javascript" src="{{ path('root') }}js/bootstrap.min.js"></script>
			<script type="text/javascript" src="{{ path('root') }}js/datepicker.js"></script>
		{% endblock %}
		{% block javascript_refund %}{% endblock %}
		{% block javascript_payout %}{% endblock %}
		{% block javascript_billing %}{% endblock %}
		{% block javascript_tool %}{% endblock %}
		{% block javascript_statCustomer %}{% endblock %}
		{% block javascript_loyaltyCustomer %}{% endblock %}
		{% block javascript_statVoucher %}{% endblock %}
		{% block javascript_noteOrder %}{% endblock %}
		{% block javascript_mapCustomers %}{% endblock %}
		{% block javascript_mapShops %}{% endblock %}
		{% block javascript_marginMerchant %}{% endblock %}
		{% block javascript_refund_postclosure %}{% endblock %}
		{% block javascript_accounting_customers %}{% endblock %}
		{% block javascript_bill_comments %}{% endblock %}
		{% block javascript_product_evolution %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
