			============================== -->
			<!-- APDC POPUP -->
            <action method="addJs"><script>prototype/validation.js</script></action>
            <action method="addJs"><script>varien/js.js</script></action>
            <action method="addJs"><script>varien/form.js</script></action>
            <action method="addItem"><type>skin_js</type><file>vendor/apdc_popup/js/login-popup.js</file></action>
            <action method="addItem"><type>skin_js</type><file>vendor/apdc_popup/js/newsletter-popup.js</file></action>
            <action method="addItem"><type>skin_js</type><file>vendor/apdc_popup/js/apdc_quickview.js</file></action>
            <action method="addItem"><type>skin_css</type><file>vendor/apdc_popup/css/popup.css</file></action>
            <action method="addItem"><type>skin_js</type><file>vendor/apdc_popup/js/popup.js</file></action>
            <!-- Social Connect -->
            <action method="addItem" ifconfig="customer/inchoo_socialconnect_google/enabled">
                <type>skin_css</type>
                <name>inchoo_socialconnect/google/css/button.css</name>
            </action>
            <action method="addItem" ifconfig="customer/inchoo_socialconnect_facebook/enabled">
                <type>skin_css</type>
                <name>inchoo_socialconnect/facebook/css/button.css</name>
            </action>
            <action method="addItem" ifconfig="customer/inchoo_socialconnect_twitter/enabled">
                <type>skin_css</type>
                <name>inchoo_socialconnect/twitter/css/button.css</name>
            </action>
            <action method="addItem" ifconfig="customer/inchoo_socialconnect_linkedin/enabled">
                <type>skin_css</type>
                <name>inchoo_socialconnect/linkedin/css/button.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>inchoo_socialconnect/css/styles.css</name>
            </action>

            <!-- =========================
             STYLESHEETS   
            ============================== -->
            <action method="addItem"><rel>skin_css</rel><href>dist/css/main.css</href></action>
        </reference>
        <reference name="before_body_end">
          <block type="apdc_popup/popup" name="apdc_popup_js" template="apdc_popup/popup_js.phtml" />
        </reference>
        <reference name="footer">
            <block type="core/template" name="footer_js" template="page/html/footer_js.phtml"/>
        </reference>
        <remove name="global_notices"/>
        <remove name="top.links"/>
        <remove name="store_language"/>
        <remove name="top.menu"/>
        <remove name="top.container"/>
        <remove name="welcome"/>
        <remove name="currency"/>
        <remove name="top.search"/>
        <remove name="minicart_head"/>
        <remove name="account.links"/>
        <remove name="breadcrumbs"/>
        <remove name="left_first"/>
        <remove name="left"/>
        <remove name="global_messages"/>
        <remove name="messages"/>
        <remove name="product.tooltip"/>
        <remove name="emailcatcher"/>
        <remove name="right"/>
        <remove name="global_cookie_notice"/>
        <remove name="custommenu-content"/>
    </default>

    <apdc_login_view>
      <reference name="content">
            <block type="customer/form_login" name="customer_login" template="page/loginmodal.phtml">
                <block type="inchoo_socialconnect/login" name="inchoo_socialconnect_login">
                    <block type="inchoo_socialconnect/google_button" name="inchoo_socialconnect_google_login_button"/>
                    <block type="inchoo_socialconnect/facebook_button" name="inchoo_socialconnect_facebook_login_button" />
                </block>
            </block>
        </reference>
    </apdc_login_view>

    <apdc_forgotpassword_view>
      <reference name="content">
            <block type="customer/account_forgotpassword" name="forgotPassword" template="apdc_customer/form/forgotpassword.phtml" />
        </reference>
    </apdc_forgotpassword_view>

    <apdc_newsletter_view>
      <reference name="content">
            <block type="apdc_front/newsletter_form" name="newsletter_form" template="page/newsletterform.phtml">
            </block>
        </reference>
    </apdc_newsletter_view>

</layout>
