        <div class="step-title">
            <!--<span class="number"><?php echo $i ?></span>-->
            <h2><?php echo $_stepInfo['label'] ?></h2>
        </div>
        <div id="checkout-step-<?php echo $_stepId ?>" class="step a-item" style="display:none;">
            <?php echo $this->getChildHtml($_stepId) ?>
        </div>
    </li>
<?php endforeach ?>
</ol>
<script type="text/javascript">
//<![CDATA[
    var accordion = new Accordion('checkoutSteps', '.step-title', true);
    <?php if($this->getActiveStep()): ?>
    accordion.openSection('opc-<?php echo $this->getActiveStep() ?>');
    <?php endif ?>
    var checkout = new Checkout(accordion,{
        progress: '<?php echo $this->getUrl('checkout/onepage/progress') ?>',
        review: '<?php echo $this->getUrl('checkout/onepage/review') ?>',
		checkcart: '<?php echo $this->getUrl('checkout/onepage/checkcart') ?>',
        saveMethod: '<?php echo $this->getUrl('checkout/onepage/saveMethod') ?>',
        failure: '<?php echo $this->getUrl('checkout/cart') ?>'}
    );
	
	var ajaxUrlDeleteProductInCheckcart = '<?php echo $this->getUrl('checkout/onepage/deleteProductInCheckcart') ?>';
	var ajaxUrlSaveCommentInCheckcart = '<?php echo $this->getUrl('checkout/onepage/saveCommentInCheckcart') ?>';
	
	function deleteProductInCheckcart(event, entity_id) {
        var $link = jQuery(event.target);
        $link.parents('tr').addClass('deleting');
		event = event || window.event;
		event.preventDefault();
		jQuery.ajax({
			url: ajaxUrlDeleteProductInCheckcart,
			data: {entity_id : entity_id},
			dataType: 'json',
			type: 'POST'
		})
		.done(function(response) {
			checkcartContent = response.update_section.html; 
			jQuery('#checkout-step-checkcart').html(checkcartContent);
		})
		.fail(function() {
			console.log('failed');
		});
	}
	
	function saveCommentInCheckcart(event, entity_id) {
        var $link = jQuery(event.target);
        $link.parents('td').find('.action-loading').show();
		event = event || window.event;
		event.preventDefault();
		jQuery.ajax({
			url: ajaxUrlSaveCommentInCheckcart,
			data: {entity_id : entity_id, comment : jQuery('#comment-'+entity_id).val()},
			dataType: 'json',
			type: 'POST'
		})
		.done(function(response) {
			checkcartContent = response.update_section.html; 
			jQuery('#checkout-step-checkcart').html(checkcartContent);
		})
        .always(function() {
            $link.parents('td').find('.action-loading').hide();
        })
		.fail(function() {
			console.log('failed');
		});
	}
//]]>
</script>
