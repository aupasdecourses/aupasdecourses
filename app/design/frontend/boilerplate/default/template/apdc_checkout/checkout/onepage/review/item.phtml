$name = Mage::helper('apdc_checkout')->getCommercantname($this);

if(isset($_SESSION['ddate'])){
    $timestamp = strtotime($_SESSION['ddate']);
    $day = date('w', $timestamp);
	if(is_array($commercants) && array_key_exists($name,$commercants)){
