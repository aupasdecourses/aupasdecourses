<div class="col-md-7 col-md-offset-1 inchoo-socialconnect-account">
    <h2><?php echo $this->__('Google Connect') ?></h2>

    <?php if($this->_hasData()): ?>

    <?php
        $googleId = $this->_getGoogleId();
        $status = $this->_getStatus();
        $email = $this->_getEmail();
        $picture = $this->_getPicture();
        $name = $this->_getName();
        $gender = $this->_getGender();
        $birthday = $this->_getBirthday();
    ?>

    <div class="container-fluid">
        <div class="row box">
            <div class="box-content">
                <div class="col-xs-12 col-md-4">
                    <?php if(!empty($picture)): ?>
                    <p>
                        <img src="<?php echo $picture; ?>" alt="<?php echo $this->escapeHtml($name); ?>" />
                    </p>
                    <?php endif; ?>
                </div>
                <div class="col-xs-12 col-md-4">
                    <?php if(!empty($status)): ?>
                    <p>
                        <?php printf($this->__('Connected as %s', '<strong>'.$status.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                    <?php if(!empty($email)): ?>
                    <p>
                        <?php printf($this->__('Email: %s', '<strong>'.$email.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                    <?php if(!empty($googleId)): ?>
                    <p>
                        <?php printf($this->__('Google #: %s', '<strong>'.$googleId.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                    <?php if(!empty($gender)): ?>
                    <p>
                        <?php printf($this->__('Gender: %s', '<strong>'.$gender.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                    <?php if(!empty($birthday)): ?>
                    <p>
                        <?php printf($this->__('Birthday: %s', '<strong>'.$birthday.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                </div>
                <div class="col-xs-12 col-md-4">
                    <?php echo $this->getChildHtml('inchoo_socialconnect_account_google_button'); ?>
                </div>
            </div>
        </div>
    </div>
    <?php else: ?>
    <div class="container-fluid">
        <div class="row box-content">
            <div class="col-xs-12 col-md-6">
                <p>
                    <?php echo $this->__('You can connect store account with your Google account so you could login easier in the future.') ?>
                </p>
            </div>
            <div class="col-xs-12 col-md-6">
                <?php echo $this->getChildHtml('inchoo_socialconnect_account_google_button'); ?>
            </div>
        </div>
    </div>
    <?php endif; ?>
</div>
