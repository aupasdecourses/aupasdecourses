<?php
$_cartQty = $this->getSummaryCount();
if(empty($_cartQty)) {
    $_cartQty = 0;
}
$apdcAccordion = $this->getApdcCartAccordion();
$cartMessages = $this->getMessages();
if ($cartMessages) {
    $messageBlock = $this->getMessagesBlock()->setMessages($cartMessages);
}
$commercants = $this->getItemsByCommercant();
$countItems = count($commercants);
?>

<div class="minicart-wrapper">

    <div class="block-subtitle">
        <?php echo $this->__('Mon panier') ?>
        <a class="close skip-link-close" href="#" title="<?php echo $this->quoteEscape($this->__('Close')); ?>"><i class="fa fa-close"></i></a>
        <?php if($countItems): ?>
            <div class="link-empty-cart">
                <a class="empty-cart" href="#" data-ajax-url="<?php echo $this->helper('apdccart')->getAjaxEmptyCartUrl() ?>" data-confirm="<?php echo $this->__('Êtes vous sûr de vouloir vider votre panier ?'); ?>"><?php echo $this->__('Vider mon panier'); ?></a>
            </div>
        <?php endif; ?>
    </div>

    <hr>

    <?php echo $messageBlock->getGroupedHtml() ?>
    <div id="minicart-error-message" class="minicart-message"></div>
    <div id="minicart-success-message" class="minicart-message"></div>

    <?php if($countItems): ?>
        <div class="minicart-items">
            <ul id="cart-sidebar" class="mini-products-list">
                <?php foreach($commercants as $id => $commercant): ?>
                    <li>
                    <?php $closed = ((isset($apdcAccordion[$id]) && $apdcAccordion[$id] == 0) ? ' closed' : ''); ?>
                        <div style="background-color: <?php echo $commercant['color']; ?>;" class="mini-commercant-name<?php echo $closed; ?>" data-commercant="<?php echo $id; ?>">
                            <span class="title"><?php echo $commercant['name']; ?></span>
                            <span class="actions" style="color:<?php echo $commercant['color']; ?>;">
                                <?php $confirm = $this->__('Êtes vous sûr de vouloir supprimer tous les produits du commercant %s ?', $commercant['name']); ?>
                                <span data-ajax-url="<?php echo $this->helper('apdccart')->getAjaxEmptyCartUrl() ?>" class="badge empty-cart" data-confirm="<?php echo $confirm; ?>" data-commercant-id="<?php echo $id; ?>"><i class="fa fa-trash"></i></span>
                                <span class="badge count"><i><?php echo count($commercant['items']); ?></i></span>
                                <i class="fa fa-angle-up"></i>
                            </span>
                        </div>
                        <ul class="commercant-product-list">
                        <?php foreach ($commercant['items'] as $item): ?>
                            <?php echo $this->getItemHtml($item) ?>
                        <?php endforeach; ?>
                        </ul>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>

        <div id="minicart-widgets">
            <?php echo $this->getChildHtml('cart_promotion') ?>
        </div>
        <div class="mini-cart-bottom">
            <hr>
            <div class="block-content">
                <div class="subtotal">
                    <?php if ($this->canApplyMsrp()): ?>
                        <span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
                    <?php else: ?>
                        <span class="label"><?php echo $this->__('Total des produits:') ?></span> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
                        <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
                            <br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
                        <?php endif; ?>
                        <div class="estimate_shipping">
                            <?php
                                $_subtotal=$this->getSubtotal();
                                if($_subtotal < 45) {
                                    $estimate_shipping = Mage::helper('checkout')->formatPrice(9);
                                    $message = "Bénéficier de la livraison à 6€ pour ".round(45-$_subtotal,0)."€ d'achat en plus";
                                }elseif($_subtotal < 90){
                                    $estimate_shipping = Mage::helper('checkout')->formatPrice(6);
                                    $message = "Bénéficier de la livraison à 3€ pour ".round(90-$_subtotal,0)."€ d'achat en plus";
                                }elseif($_subtotal < 150){
                                    $estimate_shipping = Mage::helper('checkout')->formatPrice(3);
                                    $message = "Bénéficier de la livraison GRATUITE pour ".round(150-$_subtotal,0)."€ d'achat en plus";
                                }else{
                                    $estimate_shipping = "OFFERTS";
                                }
                            ?>
                            <span class="value"><?php echo $this->__('+ Frais de livraison: ') ?><?php echo $estimate_shipping ?></span>
                            <?php if(isset($message)):?>
                                <span class="msg"><a href="https://www.aupasdecourses.com/faq/prix-codes-promos/" target="blank"><?php echo $this->__($message) ?></span></a>
                            <?php endif;?>
                        </div>
                    <?php endif; ?>
                </div>
            </div>


            <div class="minicart-actions">
                <?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
                    <ul class="checkout-types minicart text-center">
                        <?php echo $this->getChildHtml('extra_actions') ?>
                        <li>
                            <a title="<?php echo $this->quoteEscape($this->__('Checkout')) ?>" class="button button-green checkout-button" href="<?php echo $this->getCheckoutUrl() ?>">
                                <?php echo $this->__('Checkout') ?>
                            </a>
                        </li>
                    </ul>
                <?php endif ?>
            </div>
        </div>

    <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
        <p class="empty main"><?php echo $this->__('Découvrez le large choix de vos commerçants en utilisant le menu en haut de page.') ?></p>
        <div class="mini-cart-bottom" style="padding-bottom: 5px;">
            <hr>
            <div class="block-content">
                <div class="subtotal">
                    <?php if ($this->canApplyMsrp()): ?>
                        <span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
                    <?php else: ?>
                        <span class="label"><?php echo $this->__('Total des produits:') ?></span> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
                        <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
                            <br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
                        <?php endif; ?>
                        <div class="estimate_shipping">
                            <span class="value empty" style="text-decoration: underline;"><?php echo $this->__('Rappel des frais de livraison') ?></span>
                            <span class="value empty"><?php echo $this->__('9€ pour des achats inférieurs à 45€.') ?></span>
                            <span class="value empty"><?php echo $this->__('6€ pour des achats entre 45 et 90€.') ?></span>
                            <span class="value empty"><?php echo $this->__('3€ pour des achats entre 90 et 150€.') ?></span>
                            <span class="value empty"><?php echo $this->__('OFFERTE pour des achats supérieur à 150€.') ?></span>
                        </div>
                    <?php endif; ?>
                </div>
            </div>
        </div>

    <?php endif ?>
</div>
<script type="text/javascript">
<?php if ($countItems) : ?>
var apdcProductAddedToCart = <?php echo json_encode($this->getApdcProductAddedToCartFromCommercantItems($commercants)); ?>;
