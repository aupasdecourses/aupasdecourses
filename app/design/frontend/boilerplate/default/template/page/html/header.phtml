<script>
	$j(document).ready(function(){
		
		$j('.header-account-container a').click(function(evt){
			if($j(this).parent().find('.block-login').hasClass('open') ){
				$j(this).parent().find('.block-login').removeClass('open');
				$j(this).parent().find('.label i').removeClass('fa-angle-up').addClass('fa-angle-down');
