				$j(this).parent().find('.block-login').addClass('open');
				$j(this).parent().find('.label i').removeClass('fa-angle-down').addClass('fa-angle-up');
			}
		});
		
		$j('.header-delivery-container a').click(function(evt){
			if($j(this).parent().find('.block-delivery').hasClass('open') ){
