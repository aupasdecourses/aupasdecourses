        <script type="text/javascript">
        //<![CDATA[
        jQuery('.related-checkbox').on('click', function() {
            var form = jQuery(this).parents('form');
            addRelatedToProduct(form);
        });

        var relatedProductsCheckFlag = false;
        function selectAllRelated(txt){
            var form = jQuery(txt).parents('form');
            if (relatedProductsCheckFlag == false) {
                form.find('.related-checkbox').each(function(){
                    jQuery(this)[0].checked = true;
                });
                relatedProductsCheckFlag = true;
                txt.innerHTML="<?php echo Mage::helper('core')->jsQuoteEscape($this->__('unselect all')) ?>";
            } else {
                form.find('.related-checkbox').each(function(){
                    jQuery(this)[0].checked = false;
                });
                relatedProductsCheckFlag = false;
                txt.innerHTML="<?php echo Mage::helper('core')->jsQuoteEscape($this->__('select all')) ?>";
            }
            addRelatedToProduct(form);
        }

        function addRelatedToProduct(form){
            var checkboxes = form.find('.related-checkbox');
            var values = [];
            for(var i=0;i<checkboxes.length;i++){
                if(checkboxes[i].checked) values.push(checkboxes[i].value);
            }
            if(form.find('.related-products-field')){
                form.find('.related-products-field').val(values.join(','));
                if (form.find('.related-products-field').val() !== '') {
                    form.find('.add-related-products-to-cart').attr('disabled', false);
                } else {
                    form.find('.add-related-products-to-cart').attr('disabled', true);
                }
            }
        }
        //]]>
        </script>
