<?xml version="1.0"?>
<layout version="0.1.0">
    <cms_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/homepage.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <remove name="cms.wrapper" />
			<block type="core/template" name="page_content_heading" template="apdc_home/banner.phtml" />
            <block type="core/template" name="headband" template="page/html/headband.phtml" />
            <block type="core/template" name="home-promos-favoris" as="home-promos-favoris" template="apdc_home/promos-and-favoris.phtml">
				<block type="apdc_catalog/selection" name="home-selection" template="apdc_catalog/selection/selection_all.phtml">
					<block type="apdc_catalog/product_list_card" name="card-product" as="card-product" template="apdc_catalog/product/card.phtml">
            <action method="addPriceBlockType"><type>bundle</type><block>bundle/catalog_product_price</block><template>bundle/catalog/product/price.phtml</template></action>
            <block type="core/template" name="product_actions" template="apdc_catalog/product/list/actions.phtml" />
						<block type="core/text_list" name="product_list.name.after" as="name.after" />
						<block type="apdc_catalog/product_list_productLabels" name="product_labels" template="apdc_catalog/product/list/product-labels.phtml" />
					</block>
				</block>
            </block>
            <block type="apdc_commercant/list" template="apdc_commercant/commercants_quartier.phtml" name="commercants-list"/>
            <block type="core/template" name="prefooter.phtml" as="prefooter.phtml" template="apdc_home/prefooter.phtml">
                <block type="cms/block" name="block_sponsor" as="block_sponsor">
					<action method="setBlockId"><block_id>block_sponsor</block_id></action>
				</block>
				<block type="apdc_customer/lastorder" name="lastorder" as="lastorder" template="apdc_home/lastorder.phtml" />
				<block type="apdc_blog/template" name="blog" as="blog" template="apdc_home/blog.phtml" />
            </block>
        </reference>
		
		
		<reference name="product_list.name.after">
			<block type="apdc_catalog/product_list_options" name="product_options" template="apdc_catalog/product/list/options.phtml">
				<block type="catalog/product_view_type_configurable" name="product_options.configurable" template="apdc_catalog/product/list/options/configurable.phtml" />
				<block type="core/template" name="options_js" template="catalog/product/view/options/js.phtml"/>
				<block type="catalog/product_view_options" name="product.info.options" template="apdc_catalog/product/list/options/custom-options.phtml">
					<action method="addOptionRenderer"><type>text</type><block>catalog/product_view_options_type_text</block><template>catalog/product/view/options/type/text.phtml</template></action>
					<action method="addOptionRenderer"><type>file</type><block>catalog/product_view_options_type_file</block><template>catalog/product/view/options/type/file.phtml</template></action>
					<action method="addOptionRenderer"><type>select</type><block>apdc_catalog/product_view_options_type_select</block><template>catalog/product/view/options/type/select.phtml</template></action>
					<action method="addOptionRenderer"><type>date</type><block>catalog/product_view_options_type_date</block><template>catalog/product/view/options/type/date.phtml</template></action>
				</block>
				<block type="core/html_calendar" name="html_calendar" as="html_calendar" template="page/js/calendar.phtml"/>
			</block>
		</reference>
		
    </cms_index_index>
</layout>
