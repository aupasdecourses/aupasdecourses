<?xml version="1.0"?>
<layout version="0.1.0">
  <default>
    <reference name="head">
      <action method="addItem"><type>skin_js</type><name>js/apdc_neighborhood/neighborhood.js</name><params/></action>
      <action method="addItem"><type>skin_css</type><name>css/apdc_neighborhood/neighborhood.css</name><params/></action>

    </reference>
    <reference name="header">
      <block type="apdc_neighborhood/header_menu"
        name="neighborhood_header" template="apdc_neighborhood/header/icon.phtml" />
    </reference>
  </default>
	  
	<apdc_neighborhood_view>
		<reference name="content">
      <block type="apdc_neighborhood/header_menu"
        name="neighborhood_popupcontent"
        template="apdc_neighborhood/header/popup-content.phtml" />
    </reference>
  </apdc_neighborhood_view>  

  <apdc_popup_index_templateajax>
    <block type="apdc_neighborhood/header_menu"
      name="neighborhood_popup_apdc_popup_child"
      template="apdc_neighborhood/header/popup-content.phtml" />
  </apdc_popup_index_templateajax>

  <apdc_choose_neighborhood>
    <reference name="content">
      <block type="apdc_neighborhood/header_menu" name="neighborhood_choose" template="apdc_neighborhood/choose.phtml" />
    </reference>
  </apdc_choose_neighborhood>

</layout>
