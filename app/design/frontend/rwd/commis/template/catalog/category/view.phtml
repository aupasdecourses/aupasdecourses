 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $apdc_helper = Mage::helper('apdc_front');
    $_imgHtml   = '<div class="page-title"><h1 class="subtitle category_name">';
    if ($_imgUrl = Mage::helper('apdc_catalog/category')->getImageUrl($_category)) {
        $_imgHtml .= '<img class="thumb-menu" src="'.$_imgUrl.'" alt="'.$this->escapeHtml($_category->getName()).'" title="'.$this->escapeHtml($apdc_helper->getCatTitle()).'" />';
    }
    $_imgHtml .= '<span class="commercant_name"> '.$apdc_helper->getCatTitle().'</span></h1>';
?>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php echo $_imgHtml ?>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
