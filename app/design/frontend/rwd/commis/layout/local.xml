<layout version="0.1.0">
    <catalog_product_view>
        <reference name="head">
            <action method="removeItem"><type>skin_js</type><name>js/jqzoom/jquery-1.3.1.min.js</name></action>
        </reference>
    </catalog_product_view>
    <default>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//fonts.googleapis.com/css?family=Raleway:300,400,500,700,600</href>
            </action>
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//fonts.googleapis.com/css?family=Montserrat:400,700</href>
            </action>
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//fonts.googleapis.com/css?family=Courgette</href>
            </action>
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css</href>
                <integrity>sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7</integrity>
                <crossorigin>anonymous</crossorigin>
            </action>
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css</href>
            </action>
            <action method="addLinkRel">
                <rel>alternate</rel>
                <href>https://www.aupasdecourses.com</href>
                <hreflang>fr</hreflang>
            </action>
            <!-- <action method="addCss">
                <name>css/bootstrap.css</name>
            </action> -->
            <action method="addCss">
                <name>css/bootstrap-social.css</name>
            </action>
            <block type="core/text" name="cdn">
                <action method="setText">
                    <text>
                        <![CDATA[<script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>]]>
                    </text>
                </action>
            </block>
            <action method="addItem">
                <rel>skin_js</rel>
                <href>js/custom.js</href>
            </action>
            <block type="core/template" name="metatags" template="page/html/metatags.phtml" />
        </reference>
        <reference name="right">
            <!--Remove whishlist -->
            <remove name="wishlist_sidebar" />
            <!-- Remove products viewed -->
            <remove name="right.reports.product.viewed" />
            <!-- Remove recently purchased items -->
            <remove name="sale.reorder.sidebar" />
        </reference>
        <reference name="footer">
            <block type="cms/block" name="footer.links.left">
                <action method="setBlockId">
                    <block_id>footer_links_left</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.links.middle">
                <action method="setBlockId">
                    <block_id>footer_links_middle</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.links.middle.2">
                <action method="setBlockId">
                    <block_id>footer_links_middle_2</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.links.right">
                <action method="setBlockId">
                    <block_id>footer_links_right</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.social">
                <action method="setBlockId">
                    <block_id>footer-social</block_id>
                </action>
            </block>
            <block type="cms/block" name="footer.cards">
                <action method="setBlockId">
                    <block_id>footer-cards</block_id>
                </action>
            </block>
            <remove name="footer_links" />
            <remove name="footer_links2" />
        </reference>
        <reference name="before_body_end">
            <remove name="global_cookie_notice" />
        </reference>
        <reference name="global_notices">
            <block type="page/html_cookieNotice" name="global_cookie_notice_head" as="global_cookie_notice_head" template="page/html/cookienotice.phtml" />
        </reference>
    </default>
    
    <!-- Product listings by commerÃ§ants 'Fruits'-->
    <checkout_onepage_index>
        <reference name="head">
            <block type="core/text" name="suivi_hipay" before="-">
                <action method="setText">
                    <text>
                        <![CDATA[<script> var tagmanager_event=function(event_name,event_data){
                            try{
                               window.dataLayerMarketing.push({eventData:event_data,event:event_name});
                            } catch(e){
                        }};</script>]]>
                    </text>
                </action>
            </block>
        </reference>
    </checkout_onepage_index>
    <commercants_index_index>
        <reference name="liste_commercants">
            <block type="cms/block" name="texte-intro-liste-commercants">
                <action method="setBlockId">
                    <block_id>texte_intro_liste_commercants</block_id>
                </action>
            </block>
        </reference>
    </commercants_index_index>
    <customer_account_login>
        <reference name="head">
            <action method="setTitle" translate="title">
                <title>Espace Personnel sur Au Pas De Courses</title>
            </action>
        </reference>
    </customer_account_login>
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="removeLinkByName">
                <name>recurring_profiles</name>
            </action>
            <action method="removeLinkByName">
                <name>billing_agreements</name>
            </action>
            <action method="removeLinkByName">
                <name>reviews</name>
            </action>
            <action method="removeLinkByName">
                <name>OAuth Customer Tokens</name>
            </action>
            <action method="removeLinkByName">
                <name>downloadable_products</name>
            </action>
            <action method="removeLinkByName">
                <name>autoresponderlists</name>
            </action>
            <remove name="sale.reorder.sidebar.left" />
            <remove name="reports.product.viewed.left" />
        </reference>
    </customer_account>
    <cms_index_noroute translate="label">
        <label>CMS No-Route Page</label>
        <reference name="content">
            <block type="core/template" name="contactForm" template="contacts/form.phtml" />
        </reference>
    </cms_index_noroute>
    <customer_logged_out>
        <reference name="top.links">
            <action method="removeLinkByUrl">
                <url helper="customer/getAccountUrl" />
            </action>
        </reference>
    </customer_logged_out>
    <customer_account_changeforgotten translate="label">
        <label>Reset a Password</label>
        <remove name="right" />
        <remove name="left" />
        <reference name="head">
            <action method="setTitle" translate="title" module="customer">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
            <action method="setHeaderTitle" translate="title" module="customer">
                <title>Reset a Password</title>
            </action>
        </reference>
        <reference name="content">
            <block type="customer/account_changeforgotten" name="changeForgottenPassword" template="customer/form/resetforgottenpassword.phtml" />
        </reference>
    </customer_account_changeforgotten>
