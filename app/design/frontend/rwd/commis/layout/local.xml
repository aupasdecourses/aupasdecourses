    <!-- Page Commerçant => 'Primeur Clémence' -->
    <PAGE_COMMERCANT>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addItem">
                <rel>skin_css</rel>
                <href>owl-carrousel/owl.carousel.css</href>
