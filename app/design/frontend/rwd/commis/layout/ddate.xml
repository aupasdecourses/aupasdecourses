<layout version="0.1.0">
    <ddate_checkout_onepage_index>
        <update handle="checkout_onepage_index"/>
    </ddate_checkout_onepage_index>

    <ddate_checkout_onepage_success>
        <update handle="checkout_onepage_success"/>
    </ddate_checkout_onepage_success> 
    
    <ddate_checkout_onepage_progress>
        <update handle="checkout_onepage_progress"/>
    </ddate_checkout_onepage_progress>
    
    <ddate_checkout_onepage_review>
        <update handle="checkout_onepage_review"/>
    </ddate_checkout_onepage_review>
    
    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>js_css</type>
                <name>calendar/calendar-win2k-1.css</name>
                <params/>
                <if/>
                <condition>can_load_calendar_js</condition>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>calendar/calendar.js</name>
                <params/>
                <if/>
                <condition>can_load_calendar_js</condition>
            </action>
            <action method="addItem">
                <type>js</type>
                <name>calendar/lang/calendar-en.js</name>
                <params/>
                <if/>
                <condition>can_load_calendar_js</condition>
            </action>
            <!-- <action method="addJs">
                <script>mw_ddate/jquery-1.7.2.min.js</script>
            </action>
            <action method="addJs">
                <script>mw_ddate/jquery-noconflict.js</script>
            </action> -->
            <action method="addCss">
                <stylesheet>ddate/css/ddate.css</stylesheet>
            </action>
        </reference>
        <reference name="right">
            <action method="unsetChildren"></action>
            <block type="page/html_wrapper" name="checkout.progress.wrapper" translate="label">
                <label>Checkout Progress Wrapper</label>
                <action method="setElementId"><value>checkout-progress-wrapper</value></action>
                <block type="checkout/onepage_progress" name="checkout.progress" before="-" template="ddate/checkout/onepage/progress.phtml">
                    <block type="checkout/onepage_progress" name="billing.progress" template="ddate/checkout/onepage/progress/billing.phtml"></block>
<!--                     <block type="checkout/onepage_progress" name="shipping.progress" template="ddate/checkout/onepage/progress/shipping.phtml"></block> -->
                    <block type="checkout/onepage_progress" name="shippingmethod.progress" template="ddate/checkout/onepage/progress/shipping_method.phtml"></block>
                    <block type="checkout/onepage_progress" name="payment.progress" template="ddate/checkout/onepage/progress/payment.phtml"></block>
                </block>
            </block>
        </reference>
        <reference name="checkout.onepage">
            <action method="setTemplate">
                <template>ddate/checkout/onepage.phtml</template>
            </action>
            <!--             <block type="checkout/onepage_ddate" name="checkout.onepage.ddate" as="ddate" template="ddate/checkout/onepage/ddate.phtml" /> -->
        </reference>
        <reference name="checkout.progress">
            <action method="setTemplate"><template>ddate/checkout/onepage/progress.phtml</template></action>
            <!-- <block type="checkout/onepage_ddate" name="ddate.progress" template="ddate/checkout/onepage/progress/progress.phtml"></block> -->
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_progress>  <!-- Change the template of progress block -->
        <block type="checkout/onepage_progress" name="root" output="toHtml" template="ddate/checkout/onepage/progress.phtml">
            <action method="setInfoTemplate"><method></method><template></template></action>
            <block type="checkout/onepage_progress" name="billing.progress" template="ddate/checkout/onepage/progress/billing.phtml"></block>
            <block type="checkout/onepage_progress" name="shipping.progress" template="ddate/checkout/onepage/progress/shipping.phtml"></block>
            <block type="checkout/onepage_progress" name="shippingmethod.progress" template="ddate/checkout/onepage/progress/shipping_method.phtml"></block>
            <block type="checkout/onepage_progress" name="payment.progress" template="ddate/checkout/onepage/progress/payment.phtml"></block>
        </block>
        <reference name='root'>
            <action method='setTemplate'><template>ddate/checkout/onepage/progress.phtml</template></action>
        </reference>
    </checkout_onepage_progress>

