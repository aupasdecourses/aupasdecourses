<layout version="0.1.0">
    <default>
        <reference name="root">
            <block type="page/html_head" name="head" as="head"/>
            <block type="page/html_footer" name="footer" as="footer" template="page/html/footer.phtml"/>
        </reference>

        <reference name="head">
            <!-- universal variable start -->
            <block type="core/template" name="qubit_uv" template="qubit/uv.phtml"/>
            <!-- universal variable end -->
            <!-- Sets viewport meta tag using text block -->
            <block type="core/text" name="head.viewport">
                <action method="setText"><text><![CDATA[<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />]]>&#10;</text></action>
            </block>
                <!-- =========================
                 STYLESHEETS   
                ============================== -->
                <!-- BOOTSTRAP -->
                <action method="addItem"><rel>skin_css</rel><href>bootstrap/bootstrap.min.css</href></action>
                <!-- FONT ICONS -->
                <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css</href>
                </action>
                <!-- WEB FONTS -->
                <action method="addLinkRel"><rel>stylesheet</rel><href>https://fonts.googleapis.com/css?family=Raleway:300,400,500,700,600</href></action>
                <action method="addLinkRel"><rel>stylesheet</rel><href>https://fonts.googleapis.com/css?family=Montserrat:400,700</href><type>text/css</type></action>
                <!-- ANIMATIONS -->
                <action method="addItem"><rel>skin_css</rel><href>css/animate.min.css</href></action>
                <!-- CUSTOM STYLESHEETS -->
                <action method="addItem"><rel>skin_css</rel><href>css/styles.css</href></action>
                <!-- RESPONSIVE FIXES -->
                <action method="addItem"><rel>skin_css</rel><href>css/responsive.css</href></action>
                <action method="addItem"><rel>skin_css</rel><href>css/custom.css</href></action>
                <!-- OWL CARROUSEL -->
                <action method="addItem"><rel>skin_css</rel><href>owl-carrousel/owl.carousel.css</href></action>
                <action method="addItem"><rel>skin_css</rel><href>owl-carrousel/owl.theme.css</href></action>
                <!-- MAGNIFIC POPUP -->
                <action method="addItem"><rel>skin_css</rel><href>css/magnific-popup.css</href></action>
                <!-- =========================
                      FAV AND TOUCH ICONS  
                ============================== -->
                <action method="addItem"><rel>skin_icon</rel><href>images/favicon.ico'</href></action>
                <!-- =========================
                     SCRIPTS   
                ============================== -->
                <!-- JQUERY -->
                <action method="removeItem"><type>js</type><name>mgt_developertoolbar/jquery-1.7.2.min.js</name></action>
                <block type="core/template" name="metatags" template="page/html/metatags.phtml" />
                <action method="addJs"><script>lib/jquery/jquery-1.10.2.min.js</script></action>
                <action method="addJs"><script>lib/jquery/noconflict.js</script></action>
                <!-- OTHERS -->
                <action method="addItem"><rel>skin_js</rel><href>owl-carrousel/owl.carousel.min.js</href></action>
                
                <!-- =========================
                     END SCRIPTS   
                ============================== -->
        </reference>

        <reference name="footer">
            <block type="core/template" name="footer_js" template="page/html/footer_js.phtml"/>
        </reference>
        <!-- balloz start -->
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/balloz/developer-toolbar/toolbar.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/balloz/developer-toolbar/toolbar.js</name></action>
        </reference>

        <reference name="before_body_end">
            <block type="developertoolbar/toolbar" name="balloz.toolbar" template="balloz/developertoolbar/toolbar.phtml">
                <block type="developertoolbar/panel_info" name="balloz.toolbar.panels.info" template="balloz/developertoolbar/panels/info.phtml" />
                <block type="developertoolbar/panel_blocks" name="balloz.toolbar.panels.blocks" template="balloz/developertoolbar/panels/blocks.phtml" />
                <block type="developertoolbar/panel_timers" name="balloz.toolbar.panels.timers" template="balloz/developertoolbar/panels/timers.phtml" />
                <block type="developertoolbar/panel_queries" name="balloz.toolbar.panels.queries" template="balloz/developertoolbar/panels/queries.phtml" />
                <block type="developertoolbar/panel_handles" name="balloz.toolbar.panels.handles" template="balloz/developertoolbar/panels/handles.phtml" />
                <block type="developertoolbar/panel_debug" name="balloz.toolbar.panels.debug" template="balloz/developertoolbar/panels/debug.phtml" />
            </block>
        </reference>
        <!-- balloz end -->

        <remove name="global_notices"/>
        <remove name="top.links"/>
        <remove name="store_language"/>
        <remove name="top.menu"/>
        <remove name="top.container"/>
        <remove name="welcome"/>
        <remove name="currency"/>
        <remove name="top.search"/>
        <remove name="minicart_head"/>
        <remove name="account.links"/>
        <remove name="breadcrumbs"/>
        <remove name="left_first"/>
        <remove name="left"/>
        <remove name="global_messages"/>
        <remove name="messages"/>
        <remove name="product.tooltip"/>
        <remove name="emailcatcher"/>
        <remove name="right"/>
        <remove name="global_cookie_notice"/>
        <remove name="custommenu-content"/>
        <remove name="balloz.toolbar"/>
    </default>
</layout>
