<layout version="0.1.0">
    <default>
        <reference name="root">
            <block type="page/html_head" name="head" as="head"/>
            <block type="page/html_footer" name="footer" as="footer" template="page/html/footer.phtml"/>
        </reference>
        <reference name="head">
            <!-- Sets viewport meta tag using text block -->
            <block type="core/text" name="head.viewport">
                <action method="setText"><text><![CDATA[<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />]]>&#10;</text></action>
            </block>
                <!-- =========================
                 STYLESHEETS   
                ============================== -->
                <!-- BOOTSTRAP -->
                <action method="addItem"><rel>skin_css</rel><href>bootstrap/bootstrap.min.css</href></action>
                <!-- FONT ICONS -->
                <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css</href>
                </action>
                <!-- WEB FONTS -->
                <action method="addLinkRel"><rel>stylesheet</rel><href>https://fonts.googleapis.com/css?family=Raleway:300,400,500,700,600</href></action>
                <action method="addLinkRel"><rel>stylesheet</rel><href>https://fonts.googleapis.com/css?family=Montserrat:400,700</href><type>text/css</type></action>
                <!-- ANIMATIONS -->
                <action method="addItem"><rel>skin_css</rel><href>css/animate.min.css</href></action>
                <!-- CUSTOM STYLESHEETS -->
                <action method="addItem"><rel>skin_css</rel><href>css/styles.css</href></action>
                <!-- RESPONSIVE FIXES -->
                <action method="addItem"><rel>skin_css</rel><href>css/responsive.css</href></action>
                <action method="addItem"><rel>skin_css</rel><href>css/custom.css</href></action>
                <!-- OWL CARROUSEL -->
                <action method="addItem"><rel>skin_css</rel><href>owl-carrousel/owl.carousel.css</href></action>
                <action method="addItem"><rel>skin_css</rel><href>owl-carrousel/owl.theme.css</href></action>
                <!-- =========================
                      FAV AND TOUCH ICONS  
                ============================== -->
                <action method="addItem"><rel>skin_icon</rel><href>images/favicon.ico'</href></action>
                <!-- =========================
                     SCRIPTS   
                ============================== -->
                <!-- JQUERY -->
                <action method="removeItem"><type>js</type><name>mgt_developertoolbar/jquery-1.7.2.min.js</name></action>
                <block type="core/template" name="metatags" template="page/html/metatags.phtml" />
                <action method="addJs"><script>lib/jquery/jquery-1.10.2.min.js</script></action>
                <action method="addJs"><script>lib/jquery/noconflict.js</script></action>
                <!-- OTHERS -->
                <action method="addItem"><rel>skin_js</rel><href>owl-carrousel/owl.carousel.min.js</href></action>
                <!-- =========================
                     END SCRIPTS   
                ============================== -->
        </reference>
        <reference name="footer">
            <block type="core/template" name="footer_js" template="page/html/footer_js.phtml"/>
        </reference>
    </default>
</layout>