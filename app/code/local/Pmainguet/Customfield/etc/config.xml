<?xml version="1.0"?>
<config>
  <modules>
    <Pmainguet_Customfield>
      <version>0.0.1</version>
    </Pmainguet_Customfield>
  </modules>
    <global>
      <resources>
          <Customfield_setup>
            <setup>
              <module>Pmainguet_Customfield</module>
              <class>Mage_Eav_Model_Entity_Setup</class>
            </setup>
            <connection>
              <use>default_setup</use>
            </connection>
          </Customfield_setup>
      </resources>
      <events>
         <sales_quote_save_before> 
             <observers>
                       <save_before>
                        <type>singleton</type>
                        <class>Pmainguet_Customfield_Model_Observer</class> 
                        <method>saveQuoteBefore</method> 
                      </save_before>
            </observers>
          </sales_quote_save_before>
          <sales_quote_save_after> 
             <observers>
                       <save_after>
                            <type>singleton</type>
                            <class>Pmainguet_Customfield_Model_Observer</class>
                            <method>saveQuoteAfter</method>
                      </save_after>
            </observers>
          </sales_quote_save_after>
          <sales_quote_load_after> 
                <observers>
                    <load_after>
                            <type>singleton</type>
                            <class>Pmainguet_Customfield_Model_Observer</class> 
                            <method>loadQuoteAfter</method> 
                     </load_after>
                 </observers>
          </sales_quote_load_after>
          <sales_model_service_quote_submit_after> 
                <observers>
                    <sales_model_service_quote_submit_after>
                            <type>singleton</type>
                            <class>Pmainguet_Customfield_Model_Observer</class> 
                            <method>saveOrderAfter</method> 
                     </sales_model_service_quote_submit_after>
                 </observers>
          </sales_model_service_quote_submit_after>
          <sales_order_load_after> 
                <observers>
                    <sales_order_load_after>
                            <type>singleton</type>
                            <class>Pmainguet_Customfield_Model_Observer</class> 
                            <method>loadOrderAfter</method> 
                     </sales_order_load_after>
                 </observers>
          </sales_order_load_after>
    </events>
    <models>
      <sales>
        <rewrite>
           <order>Pmainguet_Customfield_Model_Sales_Order</order>
        </rewrite>
      </sales>
      <custom>
        <class>Pmainguet_Customfield_Model</class>
        <resourceModel>custom_mysql4</resourceModel>
      </custom>
      <custom_mysql4>
        <class>Pmainguet_Customfield_Model_Mysql4</class>
      <entities>
        <custom_quote>
          <table>sales_quote_custom</table>
        </custom_quote>
        <custom_order>
          <table>sales_order_custom</table>
        </custom_order>
      </entities>
      </custom_mysql4>
      </models>
    </global>
</config>