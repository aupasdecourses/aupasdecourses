<?xml version="1.0"?>
<config>
    <modules>
        <Apdc_Delivery>
            <version>0.1.3</version>
        </Apdc_Delivery>
    </modules>
    <frontend>
        <routers>
            <delivery>
                <use>standard</use>
                <args>
                    <module>Apdc_Delivery</module>
                    <frontName>deliveryfront</frontName>
                </args>
            </delivery>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <delivery before="Adyen_Payment">Apdc_Delivery_Adminhtml</delivery>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <resources>
            <delivery_setup>
                <setup>
                    <module>Apdc_Delivery</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </delivery_setup>
            <delivery_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </delivery_write>
            <delivery_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </delivery_read>
            <pmainguet_delivery_setup>
                <setup>
                    <module>Apdc_Delivery</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </pmainguet_delivery_setup>
        </resources>
        <models>
            <pmainguet_delivery>
                <class>Apdc_Delivery_Model</class>
                <resourceModel>delivery_resource</resourceModel>
            </pmainguet_delivery>           
            <delivery_resource>
                <class>Apdc_Delivery_Model_Resource</class>
                <entities>
                    <refund_order>
                        <table>refund_order</table>
                    </refund_order>
                    <refund_items>
                        <table>refund_items</table>
                    </refund_items>
                    <indi_billingdetails>
                        <table>indi_billing_details</table>
                    </indi_billingdetails>
                    <indi_billingsummary>
                        <table>indi_billing_summary</table>
                    </indi_billingsummary>
					<geocode_customers>
						<table>geocode</table>
					</geocode_customers>
                </entities>
            </delivery_resource>
            <adyen>
                <rewrite>
                    <processNotification>Apdc_Delivery_Model_Adyen_ProcessNotification</processNotification>
                    <event>Apdc_Delivery_Model_Adyen_Event</event>
                </rewrite>
            </adyen>
        </models>
        <helpers>
            <pmainguet_delivery>
                <class>Apdc_Delivery_Helper</class>
            </pmainguet_delivery>
        </helpers>
        <template>
            <email>
                <delivery_emailcreditplus_template translate="label" module="pmainguet_delivery">
                    <label>Au Pas De Courses vient de traiter votre commande!</label>
                    <file>delivery/creditplus_template.html</file>
                    <type>html</type>
                </delivery_emailcreditplus_template>
                <delivery_emailcreditmoins_template translate="label" module="pmainguet_delivery">
                    <label>Au Pas De Courses vient de traiter votre commande!</label>
                    <file>delivery/creditmoins_template.html</file>
                    <type>html</type>
                </delivery_emailcreditmoins_template>
                <delivery_emailcreditnull_template translate="label" module="pmainguet_delivery">
                    <label>Au Pas De Courses vient de traiter votre commande!</label>
                    <file>delivery/creditnull_template.html</file>
                    <type>html</type>
                </delivery_emailcreditnull_template>
                <notification_new_note translate="label" module="pmainguet_delivery">
                    <label>Vous avez re√ßu une nouvelle note sur une commande client</label>
                    <file>notification/new_note.html</file>
                    <type>html</type>
                </notification_new_note>
                <billing_shop_mail translate="label" module="pmainguet_delivery">
                    <label>Au Pas De Courses - Facture mensuelle</label>
                    <file>delivery/billing/billing_shop.html</file>
                    <type>html</type>
                </billing_shop_mail>
            </email>
        </template>
	</global>
</config>
