<?xml version="1.0"?>
<config>
  <sections>
    <apdc_neighborhood translate="label comment" module='apdc_neighborhood'>
      <label>Neighborhood</label>
      <tab>apdc</tab>
      <sort_order>40</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>0</show_in_website>
      <show_in_store>0</show_in_store>
      <groups>
        <notifications translate='label comment'>
          <label>Notification</label>
          <sort_order>0</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>0</show_in_website>
          <show_in_store>0</show_in_store>
          <comment></comment>
          <fields>
            <is_active translate='label'>
              <label>Enable</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>0</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </is_active>
            <template_notification_change_neighborhood translate="label" module="apdc_neighborhood">
              <label>Notification when customer change neighborhood</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_email_template</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </template_notification_change_neighborhood>
            <sent_to_email translate="label" module="apdc_neighborhood">
              <label>Notification sent to email</label>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </sent_to_email>
            <sent_to_name translate="label" module="apdc_neighborhood">
              <label>Notification sent to name</label>
              <frontend_type>text</frontend_type>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </sent_to_name>
          </fields>
        </notifications>
      </groups>
    </apdc_neighborhood>
  </sections>
</config>  
