<?xml version="1.0"?>
<config>
    <modules>
        <Apdc_Attributesqtoi>
            <version>0.0.7</version>
        </Apdc_Attributesqtoi>
    </modules>
    <global>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <marge_arriere />
                        <commercant />
                        <prix_kilo_site />
                        <short_description />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <fieldsets>
            <sales_convert_quote_item>
                <marge_arriere>
                    <to_order_item>*</to_order_item>
                </marge_arriere>
                <commercant>
                    <to_order_item>*</to_order_item>
                </commercant>
                <prix_kilo_site>
                    <to_order_item>*</to_order_item>
                </prix_kilo_site>
                <short_description>
                    <to_order_item>*</to_order_item>
                </short_description>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <marge_arriere>
                    <to_quote_item>*</to_quote_item>
                </marge_arriere>
                <commercant>
                    <to_quote_item>*</to_quote_item>
                </commercant>
                <prix_kilo_site>
                    <to_quote_item>*</to_quote_item>
                </prix_kilo_site>
                <short_description>
                    <to_quote_item>*</to_quote_item>
                </short_description>
            </sales_convert_order_item>
        </fieldsets>
         <events>
            <sales_quote_item_set_product>
                <observers>
                    <pmainguet_attributesqtoi>
                        <class>pmainguet_attributesqtoi/observer</class>
                        <method>salesQuoteItemSetCustomAttribute</method>
                    </pmainguet_attributesqtoi>
                </observers>
            </sales_quote_item_set_product>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <pmainguet_attributesqtoi>
                        <class>pmainguet_attributesqtoi/observer</class>
                        <method>deliverycheck</method>
                    </pmainguet_attributesqtoi>
                </observers>
            </sales_convert_quote_item_to_order_item>
        </events>
        <helpers>
            <pmainguet_attributesqtoi>
                <class>Apdc_Attributesqtoi_Helper</class>
            </pmainguet_attributesqtoi>
        </helpers>
        <models>
            <pmainguet_attributesqtoi>
                <class>Apdc_Attributesqtoi_Model</class>
            </pmainguet_attributesqtoi>
        </models>
        <resources>
            <pmainguet_attributesqtoi_setup>
                <setup>
                    <module>Apdc_Attributesqtoi</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </pmainguet_attributesqtoi_setup>
        </resources>
    </global>
</config>