<?xml version="1.0"?>
<config>

  <modules>
    <Apdc_Dataflow>
      <version>0.1.3</version>
    </Apdc_Dataflow>
  </modules>

  <global>
    <blocks>
      <apdc_dataflow>
        <class>Apdc_Dataflow_Block</class>
      </apdc_dataflow>
      <adminhtml>
        <rewrite>
          <system_convert_profile_edit_tab_run>Apdc_Dataflow_Block_Adminhtml_System_Convert_Profile_Edit_Tab_Run</system_convert_profile_edit_tab_run>
        </rewrite>
      </adminhtml>
    </blocks>
    <helpers>
      <apdc_dataflow>
        <class>Apdc_Dataflow_Helper</class>
      </apdc_dataflow>
    </helpers>
    <models>
      <apdc_dataflow>
        <class>Apdc_Dataflow_Model</class>
        <resourceModel>apdc_dataflow_resource</resourceModel>
      </apdc_dataflow>
    </models>
    <resources>
      <apdc_dataflow_setup>
        <setup>
          <module>Apdc_Dataflow</module>
          <class>Mage_Catalog_Model_Resource_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </apdc_dataflow_setup>
    </resources>
  </global>
  <adminhtml>
   <layout>
     <updates>
       <apdc_dataflow>
          <file>apdc/apdc_dataflow.xml</file>
       </apdc_dataflow>  
     </updates>
   </layout>
  </adminhtml>
</config>
