<?xml version="1.0"?>
<!-- /* @author Pierre Mainguet*/ -->
<config>
    <modules>
        <Apdc_Cart>
            <version>0.1.0</version>
        </Apdc_Cart>
    </modules>
    <global>
        <blocks>
            <apdccart>
                <class>Apdc_Cart_Block</class>
            </apdccart>
            <adminhtml>
                <rewrite>
                    <sales_items_abstract>Apdc_Cart_Block_Adminhtml_Sales_Items_Abstract</sales_items_abstract>
                </rewrite>
            </adminhtml>
            <checkout>
                <rewrite>
                    <cart_sidebar>Apdc_Cart_Block_Cart_Sidebar</cart_sidebar>
                </rewrite>
            </checkout>
        </blocks>

        <helpers>
          <apdccart>
            <class>Apdc_Cart_Helper</class>
          </apdccart>
        </helpers>

        <models>
            <apdccart>
                <class>Apdc_Cart_Model</class>
            </apdccart>
            <checkout>
                <rewrite>
                    <cart>Apdc_Cart_Model_Cart</cart>
                </rewrite>
            </checkout>
        </models>
        <fieldsets>
            <sales_convert_quote_item>
                <item_comment>
                    <to_order_item>*</to_order_item>
                </item_comment>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <item_comment>
                    <to_quote_item>*</to_quote_item>
                </item_comment>
            </sales_convert_order_item>
        </fieldsets>
    </global>
    <frontend>
        <layout>
            <updates>
                <apdccart>
                    <file>apdc_cart.xml</file>
                </apdccart>
            </updates>
        </layout>
        <routers>
          <checkout>
            <args>
              <modules>
                <apdccart before="Mage_Checkout">Apdc_Cart</apdccart>
              </modules>
            </args>
          </checkout>
            <addajax>
                <use>standard</use>
                <args>
                    <module>Apdc_Cart</module>
                    <frontName>addajax</frontName>
                </args>
            </addajax>
        </routers>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <item_comment>
                    <file>apdc/apdc_cart.xml</file>
                </item_comment>
            </updates>
        </layout>
    </adminhtml>
</config>
