<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * @author Pierre Mainguet
 * @package Apdc_Config
 * All custom config
 * Customhandles: observer that add custom handles to specific page
 */
-->
<config>
    <modules>
        <Apdc_Config>
            <version>0.1.0</version>
        </Apdc_Config>
        <depends>
            <Mage_Core />
        </depends>
    </modules>
    <global>
        <blocks>
            <page>
                <rewrite>
                      <html_footer>Apdc_Config_Block_Html_Footer</html_footer>
                </rewrite>
            </page>
        </blocks>
        <models>
            <apdcconfig>
                    <class>Apdc_Config_Model</class>
            </apdcconfig>
            <sitemap>  
                <rewrite>  
                    <sitemap>Apdc_Config_Model_Sitemap</sitemap> 
                </rewrite>
            </sitemap>  
            <core>  
                <rewrite>  
                    <design_package>Apdc_Config_Model_Designpackage</design_package> 
                </rewrite>
            </core>  
        </models>
    </global>
</config>