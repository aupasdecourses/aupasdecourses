<?xml version="1.0"?>
<config>
    <modules>
        <Apdc_Front>
            <version>0.3.0</version>
        </Apdc_Front>
    </modules>
    <global>
        <blocks>
            <apdc_front>
                <class>Apdc_Front_Block</class>
            </apdc_front>
            <page>
                <rewrite>
                    <html_footer>Apdc_Front_Block_Page_Html_Footer</html_footer>
                </rewrite>
            </page>
            <monkey>
                <rewrite>
                    <lists>Apdc_Front_Block_Newsletter_Form</lists>
                </rewrite>
            </monkey>
        </blocks>
        <helpers>
            <apdc_front>
                <class>Apdc_Front_Helper</class>
            </apdc_front>
        </helpers>
    </global>
    <frontend>
        <routers>
            <apdc_front>
                <use>standard</use>
                <args>
                    <module>Apdc_Front</module>
                    <frontName>apdc-front</frontName>
                </args>
            </apdc_front>
        </routers>
    </frontend>
</config>