<?xml version="1.0" ?>
<config>
    <sections>
        <apdcdispatch translate="label comment" module="apdcdispatch">
            <label>Dispatch Commandes</label>
            <tab>apdc</tab>
            <sort_order>10</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>Activation du dispatch</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment></comment>
                    <fields>
                        <mode translate='label'>
                          <label>Utilisation en production</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_enabledisable</source_model>
                          <sort_order>0</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </mode>
                        <mistral_active translate='label'>
                          <label>Activer Envoi des commandes à Mistral (FTP)</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_enabledisable</source_model>
                          <sort_order>0</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </mistral_active>
                        <mail_active translate='label'>
                          <label>Activer envoi des commandes aux commerçants (mail)</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_enabledisable</source_model>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </mail_active>
                    </fields>
                </general>
                <ftp_mistral translate="label">
                    <label>FTP Mistral</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment></comment>
                    <fields>
                        <ftp_host translate="label" module="apdc_neighborhood">
                          <label>Ftp host</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>20</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment>ftporamtl.stars-services.com</comment>
                        </ftp_host>
                        <ftp_port translate="label" module="apdc_neighborhood">
                          <label>Ftp port</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>30</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment>Default port: 21</comment>
                        </ftp_port>
                        <ftp_login translate="label" module="apdc_neighborhood">
                          <label>Login FTP</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>40</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </ftp_login>
                        <ftp_pwd translate="label" module="apdc_neighborhood">
                          <label>Mot de passe FTP</label>
                          <frontend_type>password</frontend_type>
                          <sort_order>50</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </ftp_pwd>
                        <use_ssl translate='label'>
                          <label>Utiliser SSL</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_enabledisable</source_model>
                          <sort_order>60</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store><comment>Default: Disabled</comment>
                        </use_ssl>
                      </fields>
                </ftp_mistral>
                <api_mistral translate="label">
                    <label>API Mistral</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment></comment>
                    <fields>
                        <api_url translate="label" module="apdc_neighborhood">
                          <label>API Url</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment>https://backend.stars-services.com/WebServices/V1/</comment>
                        </api_url>
                        <api_token translate="label" module="apdc_neighborhood">
                          <label>API Token</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>20</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment></comment>
                        </api_token>
                        <api_key translate="label" module="apdc_neighborhood">
                          <label>API Key</label>
                          <frontend_type>text</frontend_type>
                          <sort_order>30</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment></comment>
                        </api_key>
                      </fields>
                </api_mistral>
            </groups>
        </apdcdispatch>
    </sections>
</config>